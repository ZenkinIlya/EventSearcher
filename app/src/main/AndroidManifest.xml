<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.startup.eventsearcher">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".authentication.views.login.SetExtraUserDataActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".authentication.views.login.SignUpActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".authentication.views.login.SignInActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".main.ui.events.filter.FilterActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".main.ui.subscribe.SubscribeActivity"
            android:theme="@style/AppThemeWithActionBar" />
        <activity
            android:name=".main.ui.events.event.EventActivity"
            android:theme="@style/FullScreenLight" />
        <activity
            android:name=".main.ui.events.createEvent.EventCreatorActivity"
            android:theme="@style/AppThemeWithActionBar" />
        <activity
            android:name=".utils.SuccessActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".authentication.views.introduction.IntroductionActivity"
            android:theme="@style/FullScreen">
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/FullScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>