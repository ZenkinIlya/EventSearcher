    <style name="AppThemeWithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!--fullScreen activity-->
    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>              <!--без заголовка-->
        <item name="android:windowActionBar">false</item>           <!--без actionBar-->
        <item name="android:windowTranslucentNavigation">true</item><!--прозрачная панель навигации-->
        <item name="android:windowTranslucentStatus">true</item>    <!--прозрачный статус-->
    </style>

    <!--fullScreen with white backArrow-->
    <style name="FullScreenLight" parent="FullScreen">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <!--Анимация-->
    <style name="LeftRightActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_left_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_left_right_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_left_right_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_right_close_enter</item>
    </style>

    <!--Кнопка с загругленными краями-->
    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_rounded_corner</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--warning кнопка с загругленными краями-->
    <style name="RoundedCornerButtonWarning" parent="RoundedCornerButton">
        <item name="android:background">@drawable/btn_warning_rounded_corner</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Карточка с загругленными краями-->
    <style name="Card" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!--Карточка с загругленными краями-->
    <style name="CardLowRadius" parent="Card">
        <item name="cardCornerRadius">10dp</item>
    </style>

    <!--Стиль для загаловка Toolbar-->
    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CaptionText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommentText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyText</item>
    </style>

</resources>