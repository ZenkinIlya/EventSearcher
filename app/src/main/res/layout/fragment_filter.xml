<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.events.FilterFragment">

    <RelativeLayout
        android:id="@+id/event_list_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Spinner
            android:id="@+id/event_list_filters_city_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/event_list_filters_icon_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_group"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/members"
            app:tint="@color/quantum_grey"
            android:layout_below="@id/event_list_filters_city_spinner"
            android:layout_above="@id/event_list_filters_start_date"/>

        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/event_list_filters_range_members"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:rsb_mode="range"
            app:rsb_max="50"
            app:rsb_min_interval="1"
            app:rsb_progress_color="@color/primaryLightColor"
            app:rsb_tick_mark_layout_gravity="top"
            app:rsb_tick_mark_text_array="@array/markArray"
            app:rsb_tick_mark_gravity="center"
            app:rsb_tick_mark_mode="number"
            app:rsb_tick_mark_text_margin="20dp"
            android:layout_toEndOf="@id/event_list_filters_icon_members"
            android:layout_below="@id/event_list_filters_city_spinner"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/event_list_filters_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/TheDateOfTheEvent"
            app:startIconDrawable="@drawable/ic_calendar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_below="@id/event_list_filters_range_members">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:focusable="false"
                android:fontFamily="sans-serif-condensed"/>
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

</FrameLayout>